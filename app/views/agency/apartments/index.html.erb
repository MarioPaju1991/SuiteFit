<div class="container">
  <div class="row">
    <%# create individual cards here %>
    <% @apartments.each do |apartment| %>
      <div class="col-5 my-3 mx-2">
        <div class="card" style="width: 18rem;">
          <img src="..." class="card-img-top" alt="...">
          <div class="card-body">
            <%# main display info %>
            <div>
              <h5 class="card-title"><%= apartment.name %> - <%= apartment.category %></h5>
              <p class="card-text"><%= apartment.total_floorspace %> m²</p>
            </div>
            <%# subtitle info %>
            <div>
              <p class="card-text"><i class="fa-solid fa-location-dot"></i> <%= apartment.address %></p>
              <p class="card-text">¥<%= apartment.price.to_i %></p>
            </div>
            <%# View, Edit and Delete Button %>
            <div>
              <%= link_to "View apartment", agency_apartment_path(apartment) %>
              <%= link_to "Edit apartment", edit_agency_apartment_path(apartment) %>
              <%= link_to "Delete apartment", agency_apartment_path(apartment), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
