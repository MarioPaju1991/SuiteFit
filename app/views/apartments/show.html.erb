<div class="container flashy-container">
  <%# create individual cards here %>
  <div class="card-flashy">
    <%= image_tag(@apartment.photos[0], class: "img-flashy") %>
    <div>
      <h2><%= @apartment.name %> - <%= @apartment.category %></h2>
      <h3>Address: <i class="fa-solid fa-location-dot"></i> <%= @apartment.address %></h3>
      <%# Create a bookmark form %>
      <%= simple_form_for [@apartment, @bookmark] do |f| %>
        <%= button_tag( :submit, class: "mb-4", id: "fav-btn") do %>
          <i class="fa-solid fa-star"></i>
        <% end %>
      <% end %>
      <p><%= @apartment.description %></p>
      <p>
        Total floorspace: <%= @apartment.total_floorspace %> m²
      </p>
      <div class="text-center">
        <p><%= @apartment.price.to_i %>¥ per month</p>
        <p><%= @apartment.total_floorspace %>m²</p>
        <p>Managed by <%= @apartment.agency.username %></p>
      </div>
      <div id="qr">
        <%# displaying the qr code %>
        <% @qr = RQRCode::QRCode.new("https://suite-fit-rlmp44-5e8ff51180b0.herokuapp.com/apartments/#{@apartment.id}") %>
        <%== @qr.as_svg(module_size: 4, viewbox: true) %>
      </div>
    </div>
  </div>
</div>
